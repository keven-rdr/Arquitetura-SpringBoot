<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="001-create-ninja-schema" author="keven">
        <preConditions onFail="MARK_RAN">
            <not>
                <sqlCheck expectedResult="0">
                    SELECT COUNT(*) FROM information_schema.schemata WHERE schema_name = 'ninja';
                </sqlCheck>
            </not>
        </preConditions>

        <sql>CREATE SCHEMA ninja;</sql>

        <comment>Cria o schema 'ninja' se ele ainda n√£o existir.</comment>
    </changeSet>


</databaseChangeLog>
